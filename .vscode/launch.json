{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Debug GUI App",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "-m",
            "args": [
                "streamlit",
                "run",
                "gui_app.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}